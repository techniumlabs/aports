# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=plasma-phonebook
pkgver=21.06
pkgrel=0
pkgdesc="Contacts application which allows adding, modifying and removing contacts"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/kde/plasma-phonebook"
license="LicenseRef-KDE-Accepted-GPL"
depends="
	kirigami2
	qt5-qtbase-sqlite
	qt5-qtquickcontrols
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kirigami2-dev
	kpeople-dev
	kpeoplevcard-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtquickcontrols2-dev
	qt5-qtsvg-dev
	"
source="https://download.kde.org/stable/plasma-mobile/$pkgver/plasma-phonebook-$pkgver.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
2b20d8bed4bb3946c908ec18cc13263c3ced12d52e4bca23aac6fad9d22f63e949272778b8579ea66e605eea671b6aa65cea2e55c19b7ae817194d2dc5d11770  plasma-phonebook-21.06.tar.xz
"
