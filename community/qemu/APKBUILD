pkgver=6.0.0
pkgrel=4
pkgdesc="QEMU is a generic machine emulator and virtualizer"
url="https://qemu.org/"
arch="all"
license="GPL-2.0 LGPL-2"
makedepends="
	meson
	bash
	alsa-lib-dev
