pkgname=ctop
pkgver=0.7.6
pkgrel=0
pkgdesc="Top-like interface for container metrics"
url="https://ctop.sh/"
license="MIT"
arch="all"
depends="docker"
makedepends="go"
options="!check" # no test suite
source="https://github.com/bcicen/ctop/archive/$pkgver/ctop-$pkgver.tar.gz"

build() {
	make build
}

package() {
	install -Dm755 ctop "$pkgdir"/usr/bin/ctop
}

